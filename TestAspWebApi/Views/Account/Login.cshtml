@model TestAspWebApi.Models.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<div class="row justify-content-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form asp-action="Login" asp-route-ReturnUrl="@Model.ReturnUrl" class="modal-body small">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="@Model.UserName" class="form-label">Имя:</label>
            <input asp-for="@Model.UserName" required class="form-control" />
            <span asp-validation-for="@Model.UserName"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Password" class="form-label">Пароль:</label>
            <input asp-for="@Model.Password" required class="form-control" />
            <span asp-validation-for="@Model.Password"></span>
        </div>
        <div class="d-grid mb-3">
            <input type="submit" class="btn btn-primary" value="Войти">
        </div>
        <div>
            Впервые здесь? <a asp-controller="Account" asp-action="Register">Зарегистрируйтесь</a>
        </div>
    </form>
</div>